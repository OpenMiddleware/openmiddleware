{
  "name": "@openmiddleware/koa",
  "version": "1.0.0",
  "description": "Koa adapter for OpenMiddleware",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "keywords": [
    "middleware",
    "koa",
    "openmiddleware",
    "adapter"
  ],
  "author": "Ersin Koc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openmiddleware/openmiddleware.git",
    "directory": "packages/koa"
  },
  "bugs": {
    "url": "https://github.com/openmiddleware/openmiddleware/issues"
  },
  "homepage": "https://openmiddleware.dev",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@openmiddleware/chain": "^1.0.0",
    "koa": "^2.0.0"
  },
  "devDependencies": {
    "@openmiddleware/chain": "workspace:*",
    "@types/koa": "^2.15.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "koa": "^2.15.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
